extends base
include mixins/video

block content 
    .watch(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls
            i.fas.fa-play#play
            #volume-container
                i.fas.fa-volume-up#mute
                input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
            #timeline-container
                div 
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
                div 
                    input(type="range", step="1", value=0, min="0")#timeline
            i.fas.fa-expand#fullscreen
    .watch_about 
        .watch_owner 
            if fs.existsSync(video.owner.avatar) || isHeroku
                img(src=staticURL + video.owner.avatar, width="100px").video_details--owner
            else
                img(src=video.owner.avatar, width="100px").video_details--owner
        .watch_detail
            h3=video.title
            small Created #{video.createdAt.getFullYear()}.#{video.createdAt.getMonth() + 1}.#{video.createdAt.getDate()} / Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
    .watch_description
        div
            p=video.description
            if loggedInUser
                if String(video.owner._id) === String(loggedInUser._id)
                    a(href=`${video.id}/edit`) Edit Video &rarr;
                    a(href=`${video.id}/delete`) Delete Video &rarr;
    if loggedIn
        .watch_add-comments 
            form.watch__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a nice comment...")
                button Add Comment
    .watch_comments 
        ul 
            each comment in video.comments.reverse()
                li.watch_comment(data-id=comment._id)
                    .watch_comment-content
                        i.fas.fa-comment
                        span=comment.content
                    if loggedInUser
                        if String(comment.owner) === String(loggedInUser._id)
                            button.comment_delete ‚ùå

block scripts 
    script(src="/assets/js/videoPlayer.js") 
    if loggedIn
        script(src="/assets/js/commentSection.js") 