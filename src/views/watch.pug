extends base
include mixins/video

block content 
    .watch 
        video(src="/" + video.fileUrl)
        div#videoControls
            button#play Play
            button#mute Mute
            input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
            div 
                span#currentTime 00:00:00
                span  / 
                span#totalTime 00:00:00
            div 
                input(type="range", step="1", value=0, min="0")#timeline
            div 
                button#fullscreen Enter Full Screen
    .watch_about 
        .watch_owner 
            if fs.existsSync(video.owner.avatar)
                img(src="/" + video.owner.avatar, width="100px").video_details--owner
            else
                img(src=video.owner.avatar, width="100px").video_details--owner
        .watch_detail
            h3=video.title
            small Created #{video.createdAt.getFullYear()}.#{video.createdAt.getMonth()}.#{video.createdAt.getDate()} / Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
    .watch_description
        div
            p=video.description
            if loggedInUser
                if String(video.owner._id) === String(loggedInUser._id)
                    a(href=`${video.id}/edit`) Edit Video &rarr;
                    a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
    script(src="/assets/js/videoPlayer.js") 