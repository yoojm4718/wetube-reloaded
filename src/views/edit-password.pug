extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="oldPassword", type="password", required, placeholder="Old Password")
        input(name="newPassword", type="password", required, placeholder="New Password")
        input(name="newPasswordConfirm", type="password", required, placeholder="New Password Confirm")
        input(value="Edit Password", type="submit")